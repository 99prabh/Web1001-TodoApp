@model Web1001_TodoApp.Models.Todo

@{
    ViewData["Title"] = "Edit";
}

<!-- Page Header -->
<div class="row">
    <div class="col-md-12 col-sm-12 col-12">
        <h3 class="text-center">Edit Todo</h3>
        <hr />
    </div>
</div>

<!-- Form Section -->
<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <!-- Edit Todo Form -->
                <form class="row g-3" method="post" asp-action="edit" asp-controller="Todo">
                    <!-- Title Input -->
                    <div class="col-md-12">
                        <label class="form-label" asp-for="Title">Title</label>
                        <input type="text" class="form-control" asp-for="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <!-- Details Input -->
                    <div class="col-md-12">
                        <label class="form-label" asp-for="Details">Details</label>
                        <textarea class="form-control" asp-for="Details"></textarea>
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                    <!-- IsComplete Checkbox -->
                    <div class="col-md-6 mt-5">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="IsComplete">
                            <label class="form-check-label" asp-for="IsComplete">
                                Complete
                            </label>
                        </div>
                    </div>
                    <!-- CompleteDate Input -->
                    <div class="col-md-6">
                        <label class="form-label" asp-for="CompleteDate">Complete Date</label>
                        <input type="date" class="form-control" asp-for="CompleteDate"></input>
                        <span asp-validation-for="CompleteDate" class="text-danger"></span>
                    </div>
                    <!-- Update Button and Back Link -->
                    <div class="col-12">
                        <button type="submit" class="btn btn-success">Update</button>
                        <a class="btn btn-info" asp-action="index" asp-controller="todo">Back To List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
