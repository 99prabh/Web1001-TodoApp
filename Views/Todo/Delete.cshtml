@model Web1001_TodoApp.Models.Todo

@{
    ViewData["Title"] = "Delete";
}

<!-- Page Title -->
<h1>Delete</h1>

<!-- Confirmation Message -->
<h3>Are you sure you want to delete this?</h3>

<div>
    <!-- Display Todo Details -->
    <h4>Todo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <!-- Display Todo Title Label -->
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            <!-- Display Todo Title -->
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            <!-- Display Todo Details Label -->
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class="col-sm-10">
            <!-- Display Todo Details -->
            @Html.DisplayFor(model => model.Details)
        </dd>
        <dt class="col-sm-2">
            <!-- Display Todo IsComplete Label -->
            @Html.DisplayNameFor(model => model.IsComplete)
        </dt>
        <dd class="col-sm-10">
            <!-- Display Todo IsComplete Status -->
            @Html.DisplayFor(model => model.IsComplete)
        </dd>
        <dt class="col-sm-2">
            <!-- Display Todo CompleteDate Label -->
            @Html.DisplayNameFor(model => model.CompleteDate)
        </dt>
        <dd class="col-sm-10">
            <!-- Display Todo CompleteDate -->
            @Html.DisplayFor(model => model.CompleteDate)
        </dd>
    </dl>

    <!-- Delete Form -->
    <form asp-action="Delete">
        <!-- Hidden field to capture Todo's Id -->
        <input type="hidden" asp-for="Id" />
        <!-- Delete Button -->
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <!-- Back to List Link -->
        <a asp-action="Index">Back to List</a>
    </form>
</div>
